{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "functions": {
    "dist/server/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10,
      "includeFiles": "shared/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}
