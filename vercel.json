{
  "version": 2,
  "framework": "react",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "functions": {
    "server/index.ts": {
      "runtime": "@vercel/node",
      "maxDuration": 10,
      "includeFiles": ["shared/**", "server/**"]
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}
